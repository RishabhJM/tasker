  <div class="container">
    <a class="btn btn-outline-dark btn-light btn-lg navbar-brand  mb-0 h1" href="/logout">Logout</a>



      <a class="btn btn-outline-dark btn-light btn-lg navbar-brand  mb-0 h1" href="/Today">Welcome  <%=user%></a>

  </div>

